{
  "manifest_version": 2,
  "name": "Clean-Browsing",
  "version": "0.5.0",
  "description": "Enhanced browsing with customizable dashboard, sidepanel, and productivity tools for Firefox-based browsers.",
  "browser_action": {
    "default_title": "Toggle Sidepanel",
    "default_icon": {
      "16": "resources/logo.png",
      "48": "resources/logo.png",
      "128": "resources/logo.png"
    }
  },
  "sidebar_action": {
    "default_title": "Clean-Browsing Sidebar",
    "default_panel": "sidepanel.html",
    "default_icon": {
      "16": "resources/logo.png",
      "32": "resources/logo.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "resources/logo.png",
    "48": "resources/logo.png",
    "128": "resources/logo.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "libs/browser-polyfill.js",
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/browser-polyfill.js",
        "iframe-tracker.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/browser-polyfill.js",
        "sidepanel-injector.js"
      ],
      "css": ["sidepanel-injected.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "browser-api.js",
    "default-settings.js",
    "sidepanel-ui.js",
    "sidepanel-embedded.js",
    "sidepanel-embedded.css",
    "sidepanel.css",
    "split-view.js",
    "resources/logo.png"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clean-browsing@example.com",
      "strict_min_version": "78.0"
    }
  }
}
