{
  "manifest_version": 2,
  "name": "Clean-Browsing",
  "version": "0.4.4",
  "description": "Enhanced browsing with customizable dashboard, sidepanel, and productivity tools",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "browser_action": {
    "default_title": "Toggle Sidepanel",
    "default_icon": {
      "16": "resources/logo.png",
      "48": "resources/logo.png",
      "128": "resources/logo.png"
    }
  },
  "icons": {
    "16": "resources/logo.png",
    "48": "resources/logo.png",
    "128": "resources/logo.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["iframe-tracker.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["sidepanel-injector.js"],
      "css": ["sidepanel-injected.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "sidepanel-embedded.js",
    "sidepanel-embedded.css",
    "split-view.js",
    "resources/logo.png",
    "sidepanel.css"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clean-browsing@example.com",
      "strict_min_version": "78.0"
    }
  }
}
