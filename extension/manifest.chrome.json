{
  "manifest_version": 3,
  "name": "Clean-Browsing",
  "version": "0.4.7",
  "description": "Enhanced browsing with customizable dashboard, sidepanel, and productivity tools",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Sidepanel",
    "default_icon": {
      "16": "resources/logo.png",
      "48": "resources/logo.png",
      "128": "resources/logo.png"
    }
  },
  "icons": {
    "16": "resources/logo.png",
    "48": "resources/logo.png",
    "128": "resources/logo.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "frame_rules",
        "enabled": true,
        "path": "frame-rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["iframe-tracker.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["sidepanel-injector.js"],
      "css": ["sidepanel-injected.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel-embedded.js",
        "sidepanel-embedded.css",
        "split-view.js",
        "resources/logo.png",
        "sidepanel.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
