{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "browser": "readonly",
    "chrome": "readonly",
    "ExtensionAPI": "readonly",
    "DefaultSettings": "readonly",
    "dayjs": "readonly",
    "importScripts": "readonly",
    "module": "readonly",
    "define": "readonly",
    "settings": "writable",
    "saveSettings": "readonly",
    "loadSettings": "readonly",
    "renderWidgets": "readonly",
    "registerWidget": "readonly",
    "widgetGrid": "writable",
    "widgetList": "writable",
    "activeIntervals": "writable",
    "createWidgetContainer": "readonly",
    "applyWidgetAppearance": "readonly",
    "setupJiggleModeControls": "readonly",
    "setupWidgetConfigButtons": "readonly",
    "saveAndRender": "readonly",
    "initSidebarSettings": "readonly",
    "SidepanelUI": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "warn",
    "eqeqeq": ["warn", "smart"],
    "curly": ["warn", "multi-line"],
    "no-var": "warn",
    "no-throw-literal": "warn",
    "no-useless-escape": "warn",
    "no-prototype-builtins": "warn",
    "no-case-declarations": "off",
    "no-empty": ["warn", { "allowEmptyCatch": true }],
    "no-self-assign": "off",
    "no-redeclare": ["error", { "builtinGlobals": false }]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "extension/libs/"
  ]
}

